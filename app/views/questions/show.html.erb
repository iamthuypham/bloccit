<% if @question.resolved %>
      <h1><%= @question.title %> [Resolved]</h1>
<% else %>
      <h1><%= @question.title %></h1>
<% end %>
 <div class="row">
   <div class="col-md-8">
     <p><%= @question.body %></p>
   </div>
   
   <div class="col-md-4">
     <%= link_to "Edit Your Question", edit_question_path(@question), class: 'btn btn-success' %>
     <%= link_to "Delete Your Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"} %>
   </div>
 </div>