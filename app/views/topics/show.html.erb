<h1><%= @topic.name %></h1>
 <div class="row">
   <div class="col-md-8">
     <p class="lead">
       <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
       <br />
       <%= @topic.description %>
     </p>
     <% @topic.posts.each do |post| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
            <%= link_to post.title, topic_post_path(@topic, post) %>
            <%= render partial: "labels/list", locals: { labels: post.labels } %>
           </h4>
           <small>
             submitted <%= time_ago_in_words(post.created_at) %> ago <br>
             <%= post.comments.count %> Comments
             submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
           </small>
         </div>
       </div>
     <% end %>
   </div>
 </div>
 <h2>All Topic Comments</h2>
 <div class="row">
   <div class="col-md-8">
       <% @topic.comments.each do |comment| %>
            <div class="media">
                 <div class="media-body">
                     <small>submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
                     <%= link_to "Delete", [@topic, comment], method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'} %>
                      </small>
                      <p><%= comment.body %></p>
                </div>
            </div>
        <% end %>
   </div>
 </div>
   <div class="col-md-4">
    <% if user_is_authorized_for_topics? %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
    <% end %>
    <% if current_user %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
   </div>
   </br>
   <div class="row">
    <div class="col-md-8">
      <div class="form-group">
         <%= render partial: 'comments/form', locals: {parent: @topic} %>
      </div>
    </div>
   </div>
      
