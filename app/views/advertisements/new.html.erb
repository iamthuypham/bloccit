 <h1>New Advertisement</h1>
 
 <div class="row">
   <div class="col-md-4">
   </div>
   <div class="col-md-8">
      <%= form_for @advertisement do |f| %>
         <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title %>
         </div>
         <div class="form-group"> 
            <%= f.label :body %>
            <%= f.text_area :body %>
         </div>
         <div class="form-group"> 
            <%= f.label :price %>
            <%= f.text_area :price %>
         </div>
         <div class="form-group">
            <%= f.submit "Save" %>
         </div>
       <% end %>
     </div>
    </div>