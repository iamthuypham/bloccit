<h1>
   <%= @post.title %> <br>
   <small>
     submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
   </small>
</h1>
<div class="row">
    <div class="col-md-8">
      <%= render partial: "labels/list", locals: { labels: @post.labels } %>
      <br />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-8">
         <p><%= @post.body %></p>
    </div>
</div>
<h2>All Post Comments</h2>
<div class="row">
    <div class="col-md-8">
        <%= render partial: "comments/list", locals: { comments: @post.comments } %>
    </div>
</div>
   <br>
   <div class="col-md-4">
    <% if user_is_authorized_for_post?(@post) %>
      <%= link_to "Edit Post", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
   </div>
   <div class="row">
    <div class="col-md-8">
      <div class="form-group">
         <%= render partial: 'comments/form', locals: {comment: @post.comments.new} %>
      </div>
    </div>
   </div>