<% unless comments.empty?  %>
   <% comments.each do |comment| %>
      <small>
         submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
         <%= link_to "Delete", comment_path(id: comment.id), method: :destroy, class: 'btn btn-danger' %>
      </small>
      <p><%= comment.body %></p>
   <% end %>
<% end %>