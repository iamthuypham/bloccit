<h2>Add Comment</h2>
<%= form_for [comment] do |f| %>
  <div class="form-group">
      <%= f.text_field :body,
                       class: 'form-control',
                       placeholder: "Enter Your Comment Here"
                      %>
  </div>
  <div class="col-md-4">
      <%= f.submit "Submit Comment", class: 'btn btn-success' %>
  </div>
  
<% end %>