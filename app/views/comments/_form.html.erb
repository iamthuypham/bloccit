<h4>Add a comment</h4>
  <%= form_for @comment do |f| %>
    <% if topic.errors.any? %>
       <div class='alert alert-danger'>
           <h4><%= pluralize(comment.errors.count, 'error') %>.</h4>
           <ul>
             <% comment.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>  
           </ul>
         </div>
    <% end %>
    <%= form_group_tag(@comment.errors[:body]) do %>
         <%= f.label :body %>
         <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter Your Comment Here" %>
    <% end %>
    <div class="form-group">
      <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
    </div>
  <% end %>
